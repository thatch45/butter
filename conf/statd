##### STATD configuration settings   #####
##########################################
# The root directory prepended to these options: log_file
#root_dir: /

#####         Logging settings       #####
##########################################
# The location of the master log file
#log_file: /var/log/butter/statd
# The level of messages to send to the log file.
# One of 'info', 'quiet', 'critical', 'error', 'debug', 'warning'.
# Default: 'warning'
#log_level: warning
#
# Logger levels can be used to tweak specific loggers logging levels.
# Imagine you want to have the butter library at the 'warning' level,
# but you still wish to have 'butter.modules' at the 'debug' level:
#   log_granular_levels: {
#     'butter': 'warning',
#     'butter.modules': 'debug'
#   }
#
#log_granular_levels: {}

####     Global Stats Settings      #####
#########################################
# Number of seconds between data queries
#interval: 10
#
# The salt target specification
#target: '*'
# The salt target type, see salt documentation for available types
#target_type: glob
#
# Butter needs to know where the salt master config file is to communicate
# with the salt master
#master_config: /etc/salt/master
#
# The number of days to keep stats data in the database, pass a negative
# value to keep data indefinately
#keep_data: 365
#
# Set the returner to use, this is also the interface used to query data.
# Remember, salt minions need to be configured to communicate with the
# correct mongo server(s)
#returner: mongo_return
#
# Disable loading certian maintainers
#disable_maintainers: []
#
# Disable loading certian data modules
#disable_data: []
#
# Set additional maintainer directories, must be fully qualified paths
#maintainer_dirs: []
#
# Set additional data directories, must be fully qualified paths
#data_dirs: []

# The mongo data if the returner is mongo_return 
#mongo.host: salt
#mongo.port: 27017
#mongo.db: salt
#mongo.user:
#mongo.password:
#
# The Redis data if the returner is redis_return
#redis.host: salt
#redis.port: 27017
#redis.db: salt

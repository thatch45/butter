# Maintainer: Thomas S Hatch <thatch45@gmail.com>

pkgname=@PACKAGE@
pkgver=@VERSION@
pkgrel=1
pkgdesc="The complex operation manager above salt"
arch=(any)
url="https://github.com/thatch45/butter"
license=("APACHE")
depends=('python2' 'salt' 'inetutils')
backup=('etc/butter/kvm' 'etc/butter/kvmd' 'etc/butter/virtd')
makedepends=()
optdepends=()
options=()
source=(@SOURCE@)
md5sums=(@MD5@)
is_git_build='@GIT_BUILD@'

if [ "$is_git_build" = "yes" ]
then
    _gitroot="git://github.com/thatch45/butter.git"
    _gitname="butter"
else
    pkgrel=@RELEASE@
fi

build()
{
    if [ "$is_git_build" = "yes" ]
    then
        cd "$srcdir"
        git clone "git://github.com/thatch45/butter.git" "$pkgname-$pkgver"
    fi
}

package()
{
    cd "$srcdir/$pkgname-$pkgver"
    python2 setup.py install --root="$pkgdir/" --optimize=1
}
